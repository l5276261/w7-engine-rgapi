/* pages/errand/create.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  background-color: #1890ff;
  color: #fff;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 10rpx rgba(24, 144, 255, 0.3);
}
