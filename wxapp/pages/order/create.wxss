/* pages/order/create.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.address-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 100rpx;
}

.addr-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-text {
  font-size: 26rpx;
  color: #666;
}

.no-address {
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: #333;
  font-size: 30rpx;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
}

.item-quantity {
  font-size: 24rpx;
  color: #999;
}

.item-price {
  font-size: 28rpx;
  font-weight: bold;
}

.fee-row, .total-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 28rpx;
}

.total-row {
  border-top: 1rpx solid #eee;
  margin-top: 10rpx;
  padding-top: 20rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.remark-section {
  display: flex;
  align-items: center;
}

.remark-input {
  flex: 1;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.footer-pay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.pay-total {
  flex: 1;
  font-size: 28rpx;
}

.pay-total .price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-left: 10rpx;
}

.pay-btn {
  width: 240rpx;
  height: 100%;
  background-color: #1890ff;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
