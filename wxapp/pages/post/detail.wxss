/* pages/post/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.post-card {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.nickname {
  font-size: 30rpx;
  font-weight: bold;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.content {
  font-size: 32rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  color: #333;
}

.images image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.comment-section {
  background-color: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  border-left: 6rpx solid #1890ff;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 30rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.comment-content {
  flex: 1;
}

.comment-user {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.empty {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 26rpx;
}

.footer-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.input {
  flex: 1;
  background-color: #f5f5f5;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  color: #1890ff;
  font-weight: bold;
  font-size: 30rpx;
  padding: 0 10rpx;
}
