<!--pages/user/index.wxml-->
<view class="container">
  <!-- 用户信息 -->
  <view class="user-card">
    <view class="user-info" bindtap="getUserProfile">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default_avatar.png'}}"></image>
      <view class="info-right">
        <view class="nickname">{{userInfo.nickName || '点击登录'}}</view>
        <view class="desc" wx:if="{{userInfo.nickName}}">欢迎来到校园生活圈</view>
      </view>
    </view>
  </view>

  <!-- 常用功能 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="goToOrder">
      <view class="item-left">
        <image class="icon" src="/images/icon_order.png"></image>
        <text>我的订单</text>
      </view>
      <text class="arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="goToErrand">
      <view class="item-left">
        <image class="icon" src="/images/icon_errand.png"></image>
        <text>我的跑腿</text>
      </view>
      <text class="arrow">></text>
    </view>

    <view class="menu-item" bindtap="goToSchedule">
      <view class="item-left">
        <image class="icon" src="/images/icon_schedule.png"></image>
        <text>课程表</text>
      </view>
      <text class="arrow">></text>
    </view>

    <view class="menu-item" bindtap="goToAddress">
      <view class="item-left">
        <image class="icon" src="/images/icon_address.png"></image>
        <text>地址管理</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>

  <!-- 其他功能 -->
  <view class="menu-list">
    <button class="menu-item contact-btn" open-type="contact">
      <view class="item-left">
        <image class="icon" src="/images/icon_service.png"></image>
        <text>联系客服</text>
      </view>
      <text class="arrow">></text>
    </button>
    
    <view class="menu-item" bindtap="clearCache">
      <view class="item-left">
        <image class="icon" src="/images/icon_clear.png"></image>
        <text>清除缓存</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>
</view>
