/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-bar {
  background-color: #fff;
  padding: 15rpx 20rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.search-input {
  font-size: 28rpx;
}

.merchant-item {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.merchant-logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.merchant-rating {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.rating-score {
  color: #ff9900;
  margin-right: 20rpx;
  font-weight: bold;
}

.merchant-delivery {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.delivery-fee {
  margin-left: 20rpx;
}

.merchant-tags {
  margin-top: 10rpx;
}

.tag {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.tag-open {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.tag-close {
  background-color: #f5f5f5;
  color: #999;
  border: 1rpx solid #d9d9d9;
}

.loading, .no-more {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
}
